<!-- 借阅管理 -->
<view class="page">
	<view class="section" wx:if="{{borrowMessage.length>0}}">
		<view wx:for="{{borrowMessage}}" class="message">
			<view class="msg-time">{{item.time}}</view>
			<view class="msg-title">借书请求</view>
			<view class="msg-content">
				<view>
					<text class="borrower">{{item.borrower}}</text> 请求借阅
					<text class="book-name">《{{item.book}}》</text>
				</view>
				<view>
					<text>微信号-</text>
					<text class="wxNum">{{item.wxNum}}</text>
				</view>

				<view>
					<text>留言-</text>
					<text class="borrower-msg">{{item.msg || '无留言'}}</text>
				</view>
			</view>
			<view class="msg-operation">
				<text class="reject" bindtap="respond" data-index="{{index}}" data-type="reject">取消</text>
				<button class="agree" bindtap="respond" data-index="{{index}}" data-type="agree">确认</button>
			</view>
		</view>
	</view>

	<view class="section">
		<view class="title">新上架图书</view>
		<view class="weui-grids">
			<block wx:for="{{grids}}" wx:key="*this">
				<navigator url="" class="weui-grid" hover-class="weui-grid_active">
					<image class="weui-grid__icon" src="../images/icon_tabbar.png" />
					<view class="weui-grid__label">Grid</view>
				</navigator>
			</block>
		</view>
	</view>
	<view class="section">
		<view class="title">扫码上传</view>
		<view class='scan'>
			<button class='scan-btn' bindtap="scanBook">
				<image src="../../image/scan.png" class="scan-img"></image>扫一扫漂流图书
			</button>
		</view>
	</view>
	<view class="section">
		<view class="title">系统公告</view>
		<view class="weui-grids">
			<block wx:for="{{grids}}" wx:key="*this">
				<navigator url="" class="weui-grid" hover-class="weui-grid_active">
					<image class="weui-grid__icon" src="../images/icon_tabbar.png" />
					<view class="weui-grid__label">Grid</view>
				</navigator>
			</block>
		</view>
	</view>
</view>